{
    "name": "pr-reactions",
    "short_name": "pr-reactions",
    "description": "Adds pull request reactions to the pull request list on github.com",
    "version": "${VERSION}",
    "applications": {
        "gecko": {
            "id": "jsnjack@gmail.com",
            "strict_min_version": "48.0"
        }
    },
    "icons": {
        "16": "icons/thumbsup16.png",
        "48": "icons/thumbsup48.png",
        "128": "icons/thumbsup128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://github.com/*"
            ],
            "js": [
                "pr-reactions.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "options_ui": {
        "page": "options.html"
    },
    "permissions": [
        "*://github.com/*",
        "*://api.github.com/*",
        "storage",
        "webRequest",
        "webRequestBlocking"
    ],
    "manifest_version": 2
}
